<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Automation Suite with ExtentReports" verbose="2" parallel="methods" thread-count="1">
    
    <parameter name="browser" value="chrome"/>
    
    <!-- System properties for ExtentReports -->
    <parameter name="extent.reports.directory" value="./test-output/extent-reports"/>
    <parameter name="extent.screenshots.directory" value="./test-output/extent-reports/screenshots"/>
    
    <listeners>
        <!-- Basic TestNG Listener for now -->
        <listener class-name="com.automation.framework.listeners.TestListener"/>
    </listeners>
    
    <test name="SauceDemo Login Tests - ExtentReports" group-by-instances="true">
        <classes>
            <class name="com.automation.tests.saucedemo"/>
        </classes>
    </test>
    
</suite>